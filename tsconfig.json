{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "packages/*/config.d.ts",
    "plugins/*/src",
    "plugins/*/config.d.ts",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "paths": {
        "@redhatinsights/backstage-plugin-progressive-delivery-frontend": ["./plugins/progressive-delivery-frontend"],
        "@redhatinsights/backstage-plugin-progressive-delivery-backend": ["./plugins/progressive-delivery-backend"]
    }
  }
}
